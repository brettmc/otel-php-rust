<?php if (isset($this->exception)): ?>
    <h2>Exception: <?php echo $this->exception->getMessage(); ?></h2>
    <pre><?php echo $this->exception->getTraceAsString(); ?></pre>
<?php elseif (isset($this->error)): ?>
    <h2>Error Type: <?php echo $this->error->type; ?></h2>
    <h3>Exception: <?php echo $this->error->exception->getMessage(); ?></h3>
    <pre><?php echo $this->error->exception->getTraceAsString(); ?></pre>
<?php else: ?>
    <p>No error details available.</p>
<?php endif; ?>